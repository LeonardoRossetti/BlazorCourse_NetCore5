@attribute [Route("/" + PagePath.Customers + "/create")]
@inject HttpClient _client
@inject NavigationManager _navManager

<FormComponent ButtonText="Create Customer" Customer="Customer" OnValidSubmit="CreateCustomer" Title="Create New Customer" />

@code {
    Customer Customer = new Customer();

    protected async override Task OnInitializedAsync()
    {
    }

    private async Task CreateCustomer()
    {
        await _client.PostAsJsonAsync(ApiEndpoints.Customers, Customer);
        _navManager.NavigateTo(PagePath.Customers);
    }

}
