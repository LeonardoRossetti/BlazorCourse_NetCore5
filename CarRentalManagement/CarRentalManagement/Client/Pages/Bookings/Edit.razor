@attribute [Route("/" + PagePath.Bookings + "/edit/{id:int}")]

@inject HttpClient _client
@inject NavigationManager _navManager

<FormComponent Booking="Booking" ButtonText="Edit Booking" Title="Edit Booking" Vehicles="Vehicles" Customers="Customers" OnValidSubmit="EditBooking" />

@code {
    [Parameter] public int id { get; set; }
    Booking Booking = new Booking();

    private List<Vehicle> Vehicles;
    private List<Customer> Customers;

    protected async override Task OnParametersSetAsync()
    {
        Booking = await _client.GetFromJsonAsync<Booking>($"{ApiEndpoints.Bookings}/{id}");
        Vehicles = await _client.GetFromJsonAsync<List<Vehicle>>($"{ApiEndpoints.Vehicles}");
        Customers = await _client.GetFromJsonAsync<List<Customer>>(ApiEndpoints.Customers);
    }

    async Task EditBooking()
    {
        await _client.PutAsJsonAsync($"{ApiEndpoints.Bookings}/{id}", Booking);
        _navManager.NavigateTo(PagePath.Bookings);
    }
}
