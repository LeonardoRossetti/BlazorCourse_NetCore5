@attribute [Route("/" + PagePath.Models + "/create")]
@inject HttpClient _client
@inject NavigationManager _navManager

<FormComponent ButtonText="Create Model" Model="Model" OnValidSubmit="CreateModel" Title="Create New Model" />

@code {
    Model Model = new Model();

    protected async override Task OnInitializedAsync()
    {
    }

    private async Task CreateModel()
    {
        await _client.PostAsJsonAsync(ApiEndpoints.Models, Model);
        _navManager.NavigateTo(PagePath.Models);
    }

}
